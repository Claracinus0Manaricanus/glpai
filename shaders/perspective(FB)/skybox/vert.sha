#version 450 core

layout(location=0) in vec3 pos;//vertex positions

out vec3 fragTex;

layout(std430, binding=4) buffer OVMBUFF{
	mat4 OVM;
};

layout(std430, binding=5) buffer CVMBUFF{
	mat4 CVM;
};

void main(){
    fragTex=pos.xyz;
	//z coordinate calculation needs check
    gl_Position=(CVM*OVM*vec4(pos.xyz,0)).xyww;
}